def menu():
    tracker = StudentTracker()
    while True:
        print("\n1. Add Student\n2. Assign Grades\n3. View Student Details\n4. Calculate Average\n5. Exit")
        choice = input("Enter choice: ")
        if choice == '1':
            add_student(tracker)
        elif choice == '2':
            assign_grades(tracker)
        elif choice == '3':
            view_details(tracker)
        elif choice == '4':
            calculate_averages(tracker)
        elif choice == '5':
            break
        else:
            print("Invalid choice.")

menu()
